{
   "name": "sveltekit-stripe",
   "version": "2.0.4",
   "description": "A barebones SvelteKit implementation for concisely rendering Stripe Elements. Gets the job done with as little complexity as possible.",
   "repository": {
      "type": "git",
      "url": "https://github.com/pevey/sveltekit-stripe"
   },
   "homepage": "https://pevey.com/sveltekit-stripe",
   "author": "Lacey Pevey",
   "license": "MIT",
   "keywords": [
     "svelte",
     "sveltekit",
     "stripe",
     "payment",
     "payments",
     "address",
     "elements",
     "pricing table",
     "checkout",
     "subscriptions",
     "ecommerce"
   ],
	"scripts": {
		"dev": "vite dev",
		"build": "shx rm -rf ./dist && vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest"
	},
   "exports": {
      ".": {
         "types": "./dist/index.d.ts",
         "svelte": "./dist/index.js"
      },
      "./Address.svelte": {
         "types": "./dist/Address.svelte.d.ts",
         "svelte": "./dist/Address.svelte"
      },
      "./Payment.svelte": {
         "types": "./dist/Payment.svelte.d.ts",
         "svelte": "./dist/Payment.svelte"
      },
      "./stores.js": {
         "types": "./dist/stores.d.ts",
         "svelte": "./dist/stores.js"
      }
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.25.2",
		"@sveltejs/package": "^2.2.2",
		"publint": "^0.2.4",
		"shx": "^0.3.4",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vitest": "^0.34.6"
	},
	"dependencies": {
		"@stripe/stripe-js": "^1.52.1"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
